<Panel isCanvas="true">
    <Image sprite="default.white" color="#e8e8e7" />
    <Track width="20" hor="End" orientation="Ver" value="0.6">
        <Track.template>
            <ControlTemplate>
                <Image sprite="default.white" color="#999999" />
            </ControlTemplate>
        </Track.template>
        <Track.resources>
            <Style forType="Thumb">
                <Setter key="width"  value="20" />
                <Setter key="height" value="20" />
                <Setter key="template">
                    <ControlTemplate>
                        <Image sprite="default.white" color="#1111ee" />
                    </ControlTemplate>
                </Setter>
            </Style>
        </Track.resources>
    </Track>
    
    <Text ver="End" height="50" margin="0,0,0,200" text="{Binding Data count}"/>
</Panel>