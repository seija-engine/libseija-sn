<StyleList>
    <Style ForType="Button">
        <Setter Key="width" Value="120" />
        <Setter Key="Template">
            <Image TName="Image" imageType="Slice" sprite="default.button" />
            <Text TName="Label" fontSize="{Binding Owner fontSize}" height="30" width="30" color="#000000"
                text="{Binding Owner content}" />
        </Setter>
        <Setter Key="ViewState">
            <Group Key="CommonStates">
                <Normal>
                    <Setter Name="Image" Key="sprite" Value="default.button" />
                    <Setter Name="Image" Key="color" Value="#ffffff" />
                    <Setter Name="Label" Key="color" Value="#000000" />
                </Normal>
                <MouseOver>
                    <Setter Name="Image" Key="sprite" Value="default.button-hover" />
                    <Setter Name="Image" Key="color" Value="#ffffff" />
                    <Setter Name="Label" Key="color" Value="#000000" />
                </MouseOver>
                <Pressed>
                    <Setter Name="Image" Key="sprite" Value="default.button-active" />
                    <Setter Name="Image" Key="color" Value="#0000ff" />
                    <Setter Name="Label" Key="color" Value="#ffffff" />
                </Pressed>
                <Disable>
                    <Setter Name="Image" Key="sprite" Value="default.button-disable" />
                    <Setter Name="Image" Key="color" Value="#ffffff" />
                    <Setter Name="Label" Key="color" Value="#000000" />
                </Disable>
            </Group>
        </Setter>
    </Style>
</StyleList>