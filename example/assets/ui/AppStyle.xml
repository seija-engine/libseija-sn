<UIResource>
    <Style forType="Control">
        <Setter key="width" value="120" />
        <Setter key="height" value="50" />
        <Setter key="template">
            <ControlTemplate>
                <Panel>
                    <Image sprite="default.white" color="#eeeeee" />
                    <Text text="FUCK" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style forType="ContentControl">
        <Setter key="width" value="300" />
        <Setter key="height" value="80" />
        <Setter key="template">
            <ControlTemplate>
                <Panel>
                    <Image sprite="default.white" color="#eeeeee" />
                    <ContentPresenter />
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style forType="ButtonBase">
        <Setter key="width" value="200" />
        <Setter key="height" value="65" />
        <Setter key="template">
            <ControlTemplate>
                <Panel>
                    <Image sprite="default.white" color="#eeeeee" />
                    <ContentPresenter />
                </Panel>
            </ControlTemplate>
        </Setter>
        <Setter key="visualStateGroups">
            <VisualStateGroups>
                <VisualStateGroup>
                
                </VisualStateGroup>
            </VisualStateGroups>
        </Setter>
    </Style>

    <DataTemplate dataType="java.lang.String">
        <Panel>
            <Image sprite="default.white" color="#ee0ee0" />
            <Text text="{Binding Data this}"/>
        </Panel>
    </DataTemplate>

    <DataTemplate dataType="TestViewModel">
        <StackPanel>
            <Text height="30" text="TestViewModel" color="#ff0000"/>
            <Text height="30" text="{Binding Data testString}"/>
        </StackPanel>
    </DataTemplate>
</UIResource>